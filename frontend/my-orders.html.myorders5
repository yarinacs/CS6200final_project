    </header>


    <div class="nav-bar">
        <a href="#" onclick="loadOrders(); return false;">All Orders</a>
        <a href="#">Returns & Orders</a>
        <a href="#">Customer Service</a>
        <a href="#">Registry</a>
        <a href="#">Gift Cards</a>
        <a href="#">Sell</a>
    </div>

    <div class="container">
        <div class="page-header">
            <h1>Your Orders</h1>
            <p style="color: #565959; font-size: 14px;">Review and manage your orders</p>
        </div>

        <div class="stats-bar" id="statsBar"></div>

        <div class="filter-bar">
            <select id="timeFilter" onchange="filterByTime()">
                <option value="all">Orders placed in: All time</option>
                <option value="30">Last 30 days</option>
                <option value="90">Last 3 months</option>
                <option value="365">Last year</option>
            </select>
            <input type="text" id="searchInput" placeholder="Search by username..." style="flex: 1">
            <button onclick="filterOrders()">Search Orders</button>
            <button onclick="loadOrders()">üîÑ Refresh</button>
        </div>

        <div id="errorMessage"></div>
        <div id="loadingMessage"></div>
        <div id="ordersContainer"></div>
    </div>

    <script>
        const API_ENDPOINT = 'https://3g0qh62cub.execute-api.us-west-2.amazonaws.com/prod/order';
        let allOrders = [];

        // Product images mapping
        const productImages = {
            'laptop': 'https://m.media-amazon.com/images/I/61+r3+JstZL._AC_SL1500_.jpg',
            'iphone': 'https://m.media-amazon.com/images/I/71d7rfSl0wL._AC_SL1500_.jpg',
            'default': 'https://m.media-amazon.com/images/I/61uA2UVnYWL._AC_SL1500_.jpg'
        };

        function getProductImage(productName) {
            const name = productName.toLowerCase();
            if (name.includes('laptop')) return productImages.laptop;
            if (name.includes('iphone')) return productImages.iphone;
            return productImages.default;
        }

        window.onload = () => { const lastUser = localStorage.getItem("lastUserName") || ""; if (lastUser) { document.getElementById("headerSearch").value = lastUser; loadMyOrders(lastUser); } };

        async function loadOrders() {
            const loadingDiv = document.getElementById('loadingMessage');
            const errorDiv = document.getElementById('errorMessage');
            const ordersDiv = document.getElementById('ordersContainer');

            loadingDiv.innerHTML = '<div class="loading"><div class="spinner"></div><p>Loading your orders...</p></div>';
            errorDiv.innerHTML = '';
            ordersDiv.innerHTML = '';

            try {
                const response = await fetch(API_ENDPOINT);
                const data = await response.json();
                allOrders = data.body || [];
                displayStats();
                displayOrders(allOrders);
            } catch (error) {
                errorDiv.innerHTML = `<div class="error"><strong>Error loading orders:</strong> ${error.message}</div>`;
            } finally {
                loadingDiv.innerHTML = '';
            }
        }

        function displayStats() {
            const total = allOrders.length;
            const revenue = allOrders.reduce((sum, o) => sum + (o.totalPrice || 0), 0);
            const customers = new Set(allOrders.map(o => o.userName)).size;
            const avgOrder = total > 0 ? revenue / total : 0;

            document.getElementById('statsBar').innerHTML = `
                <div class="stat-card">
                    <div class="stat-label">TOTAL ORDERS</div>
                    <div class="stat-value">${total}</div>
                </div>
                <div class="stat-card">
                    <div class="stat-label">TOTAL REVENUE</div>
                    <div class="stat-value">$${revenue.toFixed(2)}</div>
                </div>
                <div class="stat-card">
                    <div class="stat-label">UNIQUE CUSTOMERS</div>
                    <div class="stat-value">${customers}</div>
                </div>
                <div class="stat-card">
                    <div class="stat-label">AVERAGE ORDER VALUE</div>
                    <div class="stat-value">$${avgOrder.toFixed(2)}</div>
                </div>
            `;
        }

        function displayOrders(orders) {
            const container = document.getElementById('ordersContainer');

            if (orders.length === 0) {
                container.innerHTML = `
                    <div class="no-orders">
                        <div class="no-orders-icon">üì¶</div>
                        <h2>No orders yet</h2>
                        <p style="color: #565959;">Looks like you haven't placed an order with us yet.</p>
                    </div>
                `;
                return;
            }

            const sorted = [...orders].sort((a, b) => new Date(b.orderDate) - new Date(a.orderDate));

            container.innerHTML = '<div class="orders-list">' + sorted.map(order => {
                const orderDate = new Date(order.orderDate);
                const formattedDate = orderDate.toLocaleDateString('en-US', {
                    month: 'long',
                    day: 'numeric',
                    year: 'numeric'
                });

                const itemsHtml = (order.items || []).map(item => {
                    const imageUrl = getProductImage(item.productName);
                    return `
                        <div class="order-item">
                            <img src="${imageUrl}" alt="${item.productName}" class="item-image" onerror="this.src='https://via.placeholder.com/120?text=No+Image'">
                            <div class="item-details">
                                <div class="item-name">${item.productName || 'Product'}</div>
                                <div class="item-price">$${(item.price || 0).toFixed(2)}</div>
                                <div class="item-quantity">Quantity: ${item.quantity || 1}</div>
                            </div>
                        </div>
                    `;
                }).join('');

                return `
                    <div class="order-card">
                        <div class="order-header">
                            <div class="order-header-item">
                                <div class="order-header-label">Order Placed</div>
                                <div class="order-header-value">${formattedDate}</div>
                            </div>
                            <div class="order-header-item">
                                <div class="order-header-label">Total</div>
                                <div class="order-header-value">$${(order.totalPrice || 0).toFixed(2)}</div>
                            </div>
                            <div class="order-header-item">
                                <div class="order-header-label">Ship To</div>
                                <div class="order-header-value">${order.userName}</div>
                            </div>
                        </div>
                        <div class="order-body">
                            <h3 style="font-size: 18px; margin-bottom: 15px; font-weight: 600;">Order Details</h3>
                            <div class="order-items">${itemsHtml}</div>
                            <div class="order-actions">
                                <button class="btn btn-primary">Track Package</button>
                                <button class="btn btn-secondary">View Order Details</button>
                                <button class="btn btn-secondary">Leave Seller Feedback</button>
                                <button class="btn btn-secondary">Write a Product Review</button>
                            </div>
                        </div>
                    </div>
                `;
            }).join('') + '</div>';
        }

        function filterOrders() {
            const search = document.getElementById('searchInput').value.toLowerCase();
            const filtered = allOrders.filter(o => o.userName.toLowerCase().includes(search));
            displayOrders(filtered);
        }

        function searchOrders() {
            const search = document.getElementById('headerSearch').value.toLowerCase();
            const filtered = allOrders.filter(o =>
                o.userName.toLowerCase().includes(search) ||
                (o.items || []).some(item => item.productName.toLowerCase().includes(search))
            );
            displayOrders(filtered);
        }

        function filterByTime() {
            const days = document.getElementById('timeFilter').value;
            if (days === 'all') {
                displayOrders(allOrders);
                return;
            }

            const cutoffDate = new Date();
            cutoffDate.setDate(cutoffDate.getDate() - parseInt(days));

            const filtered = allOrders.filter(o => new Date(o.orderDate) >= cutoffDate);
            displayOrders(filtered);
        }
    </script>
</body>

</html>