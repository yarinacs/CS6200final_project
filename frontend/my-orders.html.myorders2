<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Orders - CS6620</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: #eaeded;
            color: #0f1111;
        }

        .top-header {
            background-color: #131921;
            color: white;
            padding: 8px 20px;
            display: flex;
            align-items: center;
            gap: 20px;
        }

        .logo {
            font-size: 24px;
            font-weight: bold;
            color: white;
            text-decoration: none;
            cursor: pointer;
        }

        .search-bar {
            flex: 1;
            display: flex;
            max-width: 800px;
        }

        .search-bar input {
            flex: 1;
            padding: 10px;
            border: none;
            border-radius: 4px 0 0 4px;
        }

        .search-bar button {
            padding: 10px 20px;
            background-color: #febd69;
            border: none;
            border-radius: 0 4px 4px 0;
            cursor: pointer;
        }

        .nav-bar {
            background-color: #232f3e;
            color: white;
            padding: 10px 20px;
            display: flex;
            gap: 30px;
            font-size: 14px;
        }

        .nav-bar a {
            color: white;
            text-decoration: none;
        }

        .nav-bar a:hover {
            text-decoration: underline;
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 20px;
        }

        .page-header {
            background: white;
            padding: 20px;
            margin-bottom: 20px;
            border-radius: 8px;
        }

        .page-header h1 {
            font-size: 28px;
            font-weight: 400;
            margin-bottom: 10px;
        }

        .user-input-section {
            background: white;
            padding: 20px;
            margin-bottom: 20px;
            border-radius: 8px;
            display: flex;
            gap: 15px;
            align-items: center;
        }

        .user-input-section input {
            flex: 1;
            padding: 12px 15px;
            border: 1px solid #d5d9d9;
            border-radius: 8px;
            font-size: 14px;
            max-width: 400px;
        }

        .user-input-section button {
            padding: 12px 24px;
            background-color: #ffd814;
            border: 1px solid #fcd200;
            border-radius: 8px;
            cursor: pointer;
            font-size: 14px;
            font-weight: 600;
        }

        .user-input-section button:hover {
            background-color: #f7ca00;
        }

        .orders-list {
            display: flex;
            flex-direction: column;
            gap: 20px;
        }

        .order-card {
            background: white;
            border: 1px solid #d5d9d9;
            border-radius: 8px;
            overflow: hidden;
        }

        .order-header {
            background-color: #f0f2f2;
            padding: 14px 18px;
            border-bottom: 1px solid #d5d9d9;
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            font-size: 12px;
        }

        .order-header-item {
            display: flex;
            flex-direction: column;
        }

        .order-header-label {
            color: #565959;
            margin-bottom: 4px;
            text-transform: uppercase;
            font-size: 11px;
        }

        .order-header-value {
            color: #0f1111;
            font-size: 14px;
            font-weight: 600;
        }

        .order-body {
            padding: 18px;
        }

        .order-items {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        .order-item {
            display: flex;
            gap: 20px;
            padding: 15px;
            border: 1px solid #e7e7e7;
            border-radius: 8px;
        }

        .item-image {
            width: 120px;
            height: 120px;
            object-fit: contain;
            background: white;
            border: 1px solid #ddd;
            border-radius: 4px;
            padding: 10px;
        }

        .item-details {
            flex: 1;
        }

        .item-name {
            font-size: 16px;
            color: #007185;
            margin-bottom: 8px;
            font-weight: 500;
        }

        .item-price {
            font-size: 18px;
            color: #b12704;
            margin-bottom: 5px;
            font-weight: 600;
        }

        .item-quantity {
            color: #565959;
            font-size: 14px;
        }

        .order-actions {
            margin-top: 20px;
            padding-top: 20px;
            border-top: 1px solid #e7e7e7;
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
        }

        .btn {
            padding: 8px 20px;
            border-radius: 8px;
            cursor: pointer;
            font-size: 13px;
            font-weight: 600;
        }

        .btn-primary {
            background-color: #ffd814;
            border: 1px solid #fcd200;
            color: #0f1111;
        }

        .btn-primary:hover {
            background-color: #f7ca00;
        }

        .btn-secondary {
            background-color: white;
            border: 1px solid #d5d9d9;
            color: #0f1111;
        }

        .btn-secondary:hover {
            background-color: #f7f7f7;
        }

        .loading {
            text-align: center;
            padding: 60px;
            background: white;
            border-radius: 8px;
        }

        .spinner {
            border: 3px solid #f3f3f3;
            border-top: 3px solid #ff9900;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            animation: spin 1s linear infinite;
            margin: 0 auto 20px;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        .no-orders {
            background: white;
            padding: 60px;
            text-align: center;
            border-radius: 8px;
        }

        .no-orders-icon {
            font-size: 80px;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="top-header">
        <div class="logo" onclick="window.location.href='products.html'">CS6620</div>
        <div class="search-bar">
            <input type="text" placeholder="Search your orders..." id="searchInput">
            <button onclick="searchMyOrders()">üîç</button>
        </div>
        <div style="color: white;">Hello, User</div>
    </div>

    <div class="nav-bar">
        <a href="products.html">üè† Products</a>
        <a href="basket.html">üõí Shopping Cart</a>
        <a href="my-orders.html">üì¶ My Orders</a>
        <a href="order-dashboard.html">üë®‚Äçüíº All Orders (Admin)</a>
    </div>

    <div class="container">
        <div class="page-header">
            <h1>My Orders</h1>
            <p style="color: #565959; font-size: 14px;">View and track your order history</p>
        </div>

        <div class="user-input-section">
            <label style="font-weight: 600;">Your Name:</label>
            <input type="text" 
                   id="userNameInput" 
                   placeholder="Enter your name to view orders">
            <button onclick="loadMyOrders()">üîç View My Orders</button>
        </div>

        <div id="loadingMessage"></div>
        <div id="ordersContainer"></div>
    </div>

    <script src="api-config.js"></script>
    <script src="api.js"></script>
    <script>
        let myOrders = [];
        
        window.onload = () => {
            const lastUser = localStorage.getItem('lastUserName') || '';
            document.getElementById('userNameInput').value = lastUser;
            if (lastUser) {
                loadMyOrders();
            }
        };

        async function loadMyOrders() {
            const userName = document.getElementById('userNameInput').value.trim();
            
            if (!userName) {
                alert('‚ö†Ô∏è Please enter your name!');
                return;
            }
            
            localStorage.setItem('lastUserName', userName);
            
            const loadingDiv = document.getElementById('loadingMessage');
            const ordersDiv = document.getElementById('ordersContainer');
            
            loadingDiv.innerHTML = '<div class="loading"><div class="spinner"></div><p>Loading your orders...</p></div>';
            ordersDiv.innerHTML = '';

            try {
                const response = await fetch(API_BASE_URL.ORDER);
                const data = await response.json();
                const allOrders = data.body || [];
                
                myOrders = allOrders.filter(order => order.userName.toLowerCase() === userName.toLowerCase());
                
                loadingDiv.innerHTML = '';
                displayMyOrders(myOrders, userName);
            } catch (error) {
                loadingDiv.innerHTML = '';
                ordersDiv.innerHTML = `<div class="loading"><p style="color: red;">Error: ${error.message}</p></div>`;
            }
        }

        function displayMyOrders(orders, userName) {
            const container = document.getElementById('ordersContainer');
            
            if (orders.length === 0) {
                container.innerHTML = `
                    <div class="no-orders">
                        <div class="no-orders-icon">üì¶</div>
                        <h2 style="font-size: 24px; font-weight: 400; margin-bottom: 10px;">No orders yet</h2>
                        <p style="color: #565959;">You haven't placed any orders yet, ${userName}.</p>
                        <button onclick="window.location.href='products.html'" 
                                style="margin-top: 30px; padding: 12px 30px; background: #ffd814; border: 1px solid #fcd200; border-radius: 8px; cursor: pointer; font-weight: 600;">
                            Start Shopping
                        </button>
                    </div>
                `;
                return;
            }

            const sorted = [...orders].sort((a, b) => new Date(b.orderDate) - new Date(a.orderDate));
            
            container.innerHTML = '<div class="orders-list">' + sorted.map(order => {
                const orderDate = new Date(order.orderDate);
                const formattedDate = orderDate.toLocaleDateString('en-US', {
                    month: 'long',
                    day: 'numeric',
                    year: 'numeric'
                });

                const itemsHtml = (order.items || []).map(item => {
                    const imageUrl = getProductImage(item.productName);
                    return `
                        <div class="order-item">
                            <img src="${imageUrl}" alt="${item.productName}" class="item-image" 
                                 onerror="this.src='https://via.placeholder.com/120?text=Product'">
                            <div class="item-details">
                                <div class="item-name">${item.productName}</div>
                                <div class="item-price">$${(item.price || 0).toFixed(2)}</div>
                                <div class="item-quantity">Quantity: ${item.quantity || 1}</div>
                            </div>
                        </div>
                    `;
                }).join('');

                return `
                    <div class="order-card">
                        <div class="order-header">
                            <div class="order-header-item">
                                <div class="order-header-label">Order Placed</div>
                                <div class="order-header-value">${formattedDate}</div>
                            </div>
                            <div class="order-header-item">
                                <div class="order-header-label">Total</div>
                                <div class="order-header-value">$${(order.totalPrice || 0).toFixed(2)}</div>
                            </div>
                            <div class="order-header-item">
                                <div class="order-header-label">Ship To</div>
                                <div class="order-header-value">${order.userName}</div>
                            </div>
                        </div>
                        <div class="order-body">
                            <h3 style="font-size: 18px; margin-bottom: 15px; font-weight: 600;">Order Details</h3>
                            <div class="order-items">${itemsHtml}</div>
                            <div class="order-actions">
                                <button class="btn btn-primary">Track Package</button>
                                <button class="btn btn-secondary">View Order Details</button>
                                <button class="btn btn-secondary">Leave Seller Feedback</button>
                                <button class="btn btn-secondary">Write a Product Review</button>
                            </div>
                        </div>
                    </div>
                `;
            }).join('') + '</div>';
        }

        function searchMyOrders() {
            const search = document.getElementById('searchInput').value.toLowerCase();
            const filtered = myOrders.filter(o => 
                (o.items || []).some(item => item.productName.toLowerCase().includes(search))
            );
            displayMyOrders(filtered, document.getElementById('userNameInput').value);
        }
    </script>
</body>
</html>
